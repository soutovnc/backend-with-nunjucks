{% extends "layout.njk" %}

{% block head %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title>Cursos - Rocketseat</title>

{% endblock %}

{% block content %}

        <div id="wrapper">
            <h1>Aulas</h1>
        </div>

        <section class="cards">

            {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_img-container">
                    <img src="https://skylab.rocketseat.com.br/static/{{item.thumb}}.svg" alt="{{item.id}}">
                </div>
                <div class="card_content">
                    <p>
                        {{item.title}}
                    </p>
                </div>
                <div class="card_info">
                    <p>{{item.duration}}</p>
                    <p class="card_price">{{item.price}}</p>
                </div>
            </div>
            {% endfor %}

        </section>
        
        <script src="scripts.js"></script>

{% endblock %}